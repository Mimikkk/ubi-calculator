<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@drawable/inset_border"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp" />

        <GridLayout
            android:id="@+id/pad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@color/pad_gray_2"
            android:columnCount="4"
            android:orientation="horizontal"
            android:padding="8dp"
            android:rowCount="6">


            <Button
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="0.5"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/pad_gray_4"
                android:drawableTop="@drawable/gloss"
                android:gravity="center"
                android:insetLeft="4dp"
                android:insetTop="4dp"
                android:insetRight="4dp"
                android:insetBottom="4dp"
                android:padding="0dp"
                android:text="@string/clear"
                android:textColor="@color/pad_yellow"
                android:textSize="12sp" />

            <Button
                android:id="@+id/drop"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="0.5"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/pad_gray_4"
                android:drawableTop="@drawable/gloss"
                android:gravity="center"
                android:insetLeft="4dp"
                android:insetTop="4dp"
                android:insetRight="4dp"
                android:insetBottom="4dp"
                android:padding="0dp"
                android:text="@string/drop"
                android:textColor="@color/pad_red"
                android:textSize="12sp" />

            <Button
                android:id="@+id/swap"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="0.5"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/pad_gray_4"
                android:drawableTop="@drawable/gloss"
                android:gravity="center"
                android:insetLeft="4dp"
                android:insetTop="4dp"
                android:insetRight="4dp"
                android:insetBottom="4dp"
                android:padding="0dp"
                android:text="@string/swap"
                android:textColor="@color/pad_red"
                android:textSize="12sp" />

            <Button
                android:id="@+id/undo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="0.5"
                android:layout_columnWeight="1.5"
                android:layout_gravity="fill"
                android:backgroundTint="@color/pad_gray_4"
                android:drawableTop="@drawable/gloss"
                android:gravity="center"
                android:insetLeft="4dp"
                android:insetTop="4dp"
                android:insetRight="4dp"
                android:insetBottom="4dp"
                android:padding="0dp"
                android:text="@string/undo"
                android:textColor="@color/pad_red"
                android:textSize="12sp" />

            <Button
                android:id="@+id/sqrt"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="0.5"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/pad_gray_4"
                android:gravity="center"
                android:insetLeft="4dp"
                android:insetTop="4dp"
                android:insetRight="4dp"
                android:insetBottom="4dp"
                android:padding="0dp"
                android:text="@string/sqrt"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/power"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="0.5"
                android:layout_columnWeight="1"
