<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@drawable/screen_border"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foregroundGravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="3:" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foregroundGravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="2:" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foregroundGravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="1:" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="none"
                android:text="@string/implication" />

        </LinearLayout>

        <GridLayout
            android:id="@+id/pad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@color/pad_gray_2"
            android:columnCount="4"
            android:orientation="horizontal"
            android:padding="8dp"
            android:rowCount="6">

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="0.1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/pad_gray_4"
                android:drawableTop="@drawable/gloss"
                android:gravity="center"
                android:insetLeft="4dp"
                android:insetTop="4dp"
                android:insetRight="4dp"
                android:insetBottom="4dp"
                android:padding="0dp"
                android:text="@string/clear"
                android:textColor="@color/pad_yellow" />

            <Button
                android:id="@+id/drop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="0.1"
                android:layout_columnWeight="2"
                android:layout_gravity="fill"
                android:backgroundTint="@color/pad_gray_4"
                android:drawableTop="@drawable/gloss"
                android:gravity="center"
                android:insetLeft="4dp"
                android:insetTop="4dp"
                android:insetRight="4dp"
                android:insetBottom="4dp"
                android:padding="0dp"
                android:text="@string/drop"
                android:textColor="@color/pad_red" />

            <Button
                android:id="@+id/swap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="0.1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/pad_gray_4"
                android:drawableTop="@drawable/gloss"
                android:gravity="center"
                android:insetLeft="4dp"
                android:insetTop="4dp"
                android:insetRight="4dp"
                android:insetBottom="4dp"
                android:padding="0dp"
                android:text="@string/swap"
                android:textColor="@color/pad_red" />

            <Button
                android:id="@+id/undo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="0.1"
                android:layout_columnWeight="8"
                android:drawableTop="@drawable/gloss"
                android:layout_gravity="fill"
                android:backgroundTint="@color/pad_gray_4"
                android:gravity="center"
                android:insetLeft="4dp"
                android:insetTop="4dp"
                android:insetRight="4dp"
                android:insetBottom="4dp"
                android:padding="0dp"
                android:text="@string/undo"
                android:textColor="@color/pad_red" />

            <Button
                android:id="@+id/sqrt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="0.1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/pad_gray_4"
                android:gravity="center"
                android:insetLeft="4dp"
                android:insetTop="4dp"
                android:insetRight="4dp"
                android:insetBottom="4dp"
                android:padding="0dp"
                android:text="@string/sqrt"
                android:textColor="@color/pad_white" />

            <Button
                android:id="@+id/power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="0.1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/pad_gray_4"
                android:gravity="center"
                android:insetLeft="4dp"
                android:insetTop="4dp"
                android:insetRight="4dp"
                android:drawableTop="@drawable/gloss"
                android:insetBottom="4dp"
                android:padding="0dp"
                android:text="@string/power"
                android:textColor="@color/pad_white" />

            <Button
                android:id="@+id/plusminus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="0.1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/pad_gray_4"
                android:gravity="center"
                android:insetLeft="4dp"
                android:insetTop="4dp"
                android:insetRight="4dp"
                android:insetBottom="4dp"
                android:padding="0dp"
                android:text="@string/plusminus"
                android:textColor="@color/pad_white" />

            <Button
                android:id="@+id/division"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="0.1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/pad_gray_4"
                android:gravity="center"
                android:insetLeft="4dp"
                android:insetTop="4dp"
                android:insetRight="4dp"
                android:insetBottom="4dp"
                android:padding="0dp"
                android:text="@string/division"
                android:textColor="@color/pad_white" />

            <Button
                android:id="@+id/num7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/pad_gray_4"
                android:gravity="center"
                android:insetLeft="4dp"
                android:insetTop="4dp"
                android:insetRight="4dp"
                android:insetBottom="4dp"
                android:padding="0dp"
                android:text="@string/num7"
                android:textColor="@color/pad_white" />

            <Button
                android:id="@+id/num8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/pad_gray_4"
                android:gravity="center"
                android:insetLeft="4dp"
                android:insetTop="4dp"
                android:insetRight="4dp"
                android:insetBottom="4dp"
                android:padding="0dp"
                android:text="@string/num8"
                android:textColor="@color/pad_white" />

            <Button
                android:id="@+id/num9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/pad_gray_4"
                android:gravity="center"
                android:insetLeft="4dp"
                android:insetTop="4dp"
                android:insetRight="4dp"
                android:insetBottom="4dp"
                android:padding="0dp"
                android:text="@string/num9"
                android:textColor="@color/pad_white" />

            <Button
                android:id="@+id/multiplication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/pad_gray_4"
                android:gravity="center"
                android:insetLeft="4dp"
                android:insetTop="4dp"
                android:insetRight="4dp"
                android:insetBottom="4dp"
                android:padding="0dp"
                android:text="@string/multiplication"
                android:textColor="@color/pad_white" />

            <Button
